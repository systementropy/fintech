<div class="container text-center">
  <h1 class="h1 text-center my-5">Showing article details</h1>
  <div class="card text-center m-4 shadow-lg mb-5 bg-body rounded">
    <div class="card-header">
      by - <%= @article.user.username %>
    </div>
    <div class="card-body">
      <h5 class="card-title text-info"><%= @article.title %></h5>
      <div class="card-text text-left text-start"><%= simple_format(@article.description) %></div>
      <%= link_to 'Edit', edit_article_path(@article.id), class: "btn btn-outline-primary" %>
      
      <%= link_to 'Delete', article_path(@article.id), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
    </div>
    <div class="card-footer text-muted d-flex justify-content-between">
      <small><b>Created: </b><%= time_ago_in_words(@article.created_at) %></small>
      <small><b>Updated: </b><%= time_ago_in_words(@article.updated_at) %></small>
    </div>
  </div>
</div>